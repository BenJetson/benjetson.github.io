root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[runtime.txt]
insert_final_newline = false

[*.md,*.markdown]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[{*.html,*.js,*.json,*.yml,*.yaml,.prettierrc}]
indent_style = space
indent_size = 2

[{*.css,*.scss}]
indent_style = space
indent_size = 2
